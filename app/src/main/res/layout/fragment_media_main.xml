<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/fragment_media_main_padding_left"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/fragment_main_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/roboto_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:text="@string/media"
                />
            <TextView
                android:fontFamily="@font/roboto_condensed_bold"
                android:id="@+id/text"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subtitle_text_size"
                android:text="Popular"
                />
            <TextView
                android:fontFamily="@font/roboto_condensed_bold"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subtitle_text_size"
                android:text="@string/in_cinema"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_popular_in_cinema"
                android:orientation="horizontal"
                app:reverseLayout="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:fontFamily="@font/roboto_condensed_bold"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subtitle_text_size"
                android:text="@string/on_tv"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_popular_on_tv"
                android:orientation="horizontal"
                app:reverseLayout="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>