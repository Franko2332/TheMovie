<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<ImageView
    android:id="@+id/movie_note_save_image_view"
    android:layout_marginEnd="@dimen/search_text_input_margin_end"
    android:layout_marginTop="@dimen/item_popular_movie_rate_margin_top"
    android:src="@drawable/ic_baseline_done_24"
    android:layout_gravity="right"
    android:layout_width="50dp"
    android:layout_height="50dp"
    />
    <TextView
        android:id="@+id/title_movie_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="@dimen/title_text_size" />

    <EditText
        android:gravity="top"
        android:id="@+id/movie_note_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="@dimen/subtitle_text_size" />
</LinearLayout>